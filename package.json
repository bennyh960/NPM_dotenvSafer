{
  "name": "dotenv-safer",
  "description": "Safe .env loader that validates environment variables against a documented example file",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bennyh960/NPM_dotenvSafer.git"
  },
  "homepage": "https://github.com/bennyh960/NPM_dotenvSafer.git",
  "version": "1.0.1",
  "author": "bennyh960",
  "license": "MIT",
  "keywords": [
    "dotenv",
    "env",
    "environment",
    "validation",
    "safe-env"
  ],
  "type": "module",
  "types": "dist/index.d.ts",
  "main": "index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "nodemon --exec \"tsc --noEmit && tsx src/index.ts\"",
    "dev:playground": "nodemon --config nodemon.playground.json",
    "dev:fast": "nodemon --exec tsx src/index.ts",
    "build": "tsc && rimraf dist/dev_only && rimraf dist/playground.js && rimraf dist/playground.js.map && rimraf dist/playground.d.ts",
    "prepublishOnly": "npm run build",
    "build:watch": "tsc --watch",
    "start": "npm run build && node dist/index.js",
    "deploy": "npm run build && node ./scripts/check-tgz.js && npm version patch  && npm publish && git push",
    "deployLocal": "node ./scripts/deploy-local.js",
    "test": "jest"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
